# Flask Configuration
SESSION_SECRET=your-secret-session-key-change-this-in-production
DEBUG=True
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/court_cases

# Scraper Configuration
USE_MOCK_SCRAPER=true  # Set to false for real Delhi High Court scraping
SCRAPER_TIMEOUT=30     # Request timeout in seconds
SCRAPER_MAX_RETRIES=3  # Maximum retry attempts

# Security Settings
SECRET_KEY=your-app-secret-key-here

# OCR Configuration (for CAPTCHA solving)
TESSERACT_CMD=/usr/bin/tesseract  # Path to tesseract binary
OCR_CONFIG=--psm 8 -c tessedit_char_whitelist=0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ

# Rate Limiting
REQUESTS_PER_MINUTE=10  # Limit requests to court website
REQUEST_DELAY=2         # Delay between requests in seconds

# Optional: CAPTCHA Solving Service
# CAPTCHA_SERVICE_API_KEY=your-captcha-service-key
# CAPTCHA_SERVICE_URL=https://api.captcha-service.com/solve

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=court_scraper.log

# Application Environment
ENVIRONMENT=development

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
